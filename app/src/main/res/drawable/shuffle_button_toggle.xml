<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/shuffle"/> <!-- pressed state -->
    <item android:state_focused="true"
        android:drawable="@drawable/shuffle_press"/> <!-- focused state -->
    <item android:state_hovered="true"
        android:drawable="@drawable/shuffle_press" /> <!-- hovered -->
    <item android:state_enabled="false"
        android:drawable="@drawable/shuffle_press" /> <!-- disabled -->
    <item android:drawable="@drawable/shuffle_press"/> <!-- default state -->
</selector>